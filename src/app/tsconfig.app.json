{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "types": [],
    "paths" : {
      "@app/*": ["src/app/*"],
      "@store/*": ["src/app/store/*"],
      "@env/*": ["src/environments/*"],
      "@shared/*": ["src/app/shared/*"],
      "@core/*": ["src/app/core/*"],
      "@services/*": ["src/app/core/services/*"],
    },
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
